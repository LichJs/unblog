{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dest",
    "isolatedModules": true,
    "sourceMap": false,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["node","vite/client","vitest/globals"],
    "rootDir": ".",
  },

  "include": [
    "src",
    "global.d.ts"
  ]
}
